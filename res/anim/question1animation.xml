<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android" android:shareInterpolator="false">
	<!-- fromXDelta: Empieza en el máximo ancho (100%) del padre (p) -->
	<!-- fromYDelta: Empieza en el mínimo alto (0%) del padre (p) -->
	<!-- toXDelta: Acaba en el mínimoo ancho (0) del padre (p) -->
	<translate 
		android:fromXDelta="100%p" 
		android:fromYDelta="0%p" 
		android:toXDelta="0" 
		android:duration="1500"/>
	<!-- toYDelta: Ahora hacemos una nueva translación, desde donde está hasta el máximo alto (100%) del padre (p) -->
	<!-- Después de 1500ms (startOffset: retardo desde el start de la animación), se ejecuta esta otra translación. -->
	<translate 
		android:toYDelta="100%p" 
		android:duration="2000" 
		android:startOffset="1500"/>	
</set>
